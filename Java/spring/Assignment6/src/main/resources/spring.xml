<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:mvc="http://www.springframework.org/schema/mvc"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context-3.0.xsd" >  
    
    <context:property-placeholder location="classpath:dbConfig.properties" />
    
    <!-- Using constructor initialization of Project Class -->
    <bean id="project" class="com.SipringCore.Assignment6.project">
	    
	    <!-- Inserting Project Name from DB-configuration file -->
	    <constructor-arg  value="${project.name}"></constructor-arg> 
	    
	    <constructor-arg ref="student"></constructor-arg> 

    </bean>
    
    <!-- Using constructor initialization of Student Class -->
    <bean id="student" class="com.SipringCore.Assignment6.student">
    	
    	<!-- Inserting Student Name from DB-configuration file -->
    	<constructor-arg value="${user.Name}"></constructor-arg> 
    	<constructor-arg value="121003100"></constructor-arg> 
    	 
    </bean>  
	
</beans>